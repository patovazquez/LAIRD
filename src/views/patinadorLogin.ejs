<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skater</title>    
    <!-- link css -->
    <link rel="stylesheet" href="/stylesheets/forms.css">
    <link rel='stylesheet' href='/stylesheets/style.css' >
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>


<body>
    <!-- main section -->

    <section class="main-section">    
        <section class="section">  
                <div class="title">
                    <div class="picture">
                       <a href="/"> <img src="\images\views\lairdlogotrans.png" alt="logo" class= "logo"></a>
                    </div>                
                <p class='titulos'>Ingreso SKATER</p>     
                <a href="javascript:history.back()"><button class="mi-icono"><i
                    class="fas fa-arrow-left"></i></button></a>                
                </div>

            <form class="input-fields" method="POST" action="/users" >

                <% if (typeof(error) != 'undefined') { %>
                
                    <p class="error_message"><%= "El usuario y/o contraseña es incorrecto" %> </p>
                <% } %>

                <input class="input-decoration" type="email" placeholder="E-mail" name="email" value=<% if (typeof(error) != 'undefined') { %> <%= old.email %>  <% } %>>
                <input class="input-decoration" type="password" placeholder="Contraseña" name="password">
                
                <button class="submit-button">Iniciar Sesión</button>                
                
            </form>
        </section>
    </section>
    <!-- fin main section --> 
    
</body>
</html>